<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="45dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/img2" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our application provides you oil products that best suit your engine, and thus offers the closest shop locations."
        android:textSize="30dp"
        android:textColor="@color/black" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not hesitate to contact us for help. admin@admin.com"
        android:textSize="30dp"
        android:textColor="@color/black" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin@admin.com"
        android:textSize="30dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_backtoHome3"
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:backgroundTint="@color/white"
        android:textColor="#0066FF"
        android:gravity="center"
        android:textSize="18dp" />

</LinearLayout>